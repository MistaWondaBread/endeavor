<div class="well">
<div class="page-header">
  <h2>
    <a href="<%= "http://#{@link.url}"%>"><%= @link.title %></a> 
    <br> 
    <small>Submitted by <%= @link.user.name %></small> <div class="btn-group ">
    <% if @link.user == current_user -%>
    <%= link_to 'Modify', edit_link_path(@link), class: "btn btn-default btn-xs" %>
    <%= link_to 'Delete', @link, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>

  </div>
   <% end %>
  </h2>
</div>





<div class="btn-group pull-right">

 
</div>

<h4 class="comments_title">
  <%= @link.comments.count %> Comments
</h4>

<div id="comments">
  <%= render :partial => @link.comments %>
  </div>
<%= simple_form_for [@link, Comment.new]  do |f| %>
   <div class="textarea">
    <%= f.text_area :body, class: "form-control" %>
    </div>
  <br>
  <%= f.submit "Comment", class: "btn btn-primary" %>
  <div class="btn-group">
  <%= link_to like_link_path(@link), method: :put, class: "btn btn-success btn" do %>
    
    Like
    (<%= @link.get_upvotes.size %>)
  <% end %>

<% end %>




