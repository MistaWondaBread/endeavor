<div class="well">
<div class="page-header">
  <h2>
    <a href="<%= "http://#{@link.url}"%>"><%= @link.title %></a> <% if @link.user == current_user -%>
  <div class="btn-group pull-right">
    <%= link_to 'Edit', edit_link_path(@link), class: "btn btn-sm btn-default" %>
    <%= link_to 'Delete', @link, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
  </div>
<% end %><br> 
    <small>Submitted by <%= @link.user.name %></small>
  </h2>
</div>





<div class="btn-group pull-right">

 
</div>

<h4 class="comments_title">
  <%= @link.comments.count %> Comments
</h4>

<div id="comments">
  <%= render :partial => @link.comments %>
</div>
<%= simple_form_for [@link, Comment.new]  do |f| %>
  <div class="field">
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <br>
  <%= f.submit "Add Comment", class: "btn btn-primary" %>
  <div class="btn-group">
  <%= link_to like_link_path(@link), method: :put, class: "btn btn-success btn" do %>
    <span class="glyphicon glyphicon-chevron-up"></span>
    Like
    (<%= @link.get_upvotes.size %>)
  <% end %>

<% end %>




