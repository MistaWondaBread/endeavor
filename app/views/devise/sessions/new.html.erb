<div class="col-md-8 col-md-offset-2">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class = "text-center">Welcome Back!</h3>
      </div>

<div class="panel-body">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
  	<%= f.email_field :email, :placeholder => "Email" ,autofocus: false, class: "form-control", required: true %>
  </div>

  <div class="form-group">
  	<%= f.password_field :password, :placeholder => "Password"  ,class: "form-control", required: true %>
  </div>

  <div class="form-group">
  	<%= f.submit "Log In", class: "btn btn-lg btn-success" %>
  </div>

<% end %>
</div>
</div>
</div>
</div>