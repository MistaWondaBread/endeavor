<%= div_for(comment) do %>
	<div class="comments_wrapper clearfix">
		<div class="pull-left">
			<p class="lead"><small><%= comment.body %></small></p>
			<% if comment.created_at > Time.now.beginning_of_day %>
				<p><small>Submitted <strong><%= time_ago_in_words(comment.created_at) %> ago</strong> by <%= comment.user.name %></small></p>
			<% else %>
				<p><small>Submitted <strong> <%= comment.created_at.strftime("%b %d, %Y") %> </strong> by <%= comment.user.name %></small></p>
			<% end %>

			<div class="btn-group pull-left">
			<% if comment.user == current_user -%>
				<%= link_to 'Modify', comment, method: :edit, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-default" %>

				<%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
			<% end %>


			</div>
		</div>

		
	</div>
<% end %>

